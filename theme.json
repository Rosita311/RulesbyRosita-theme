{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "layout": {
      "contentSize": "52.5rem",
      "wideSize": "75rem"
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "color-text", "name": "Text", "color": "#192324" },
        { "slug": "color-primary", "name": "Primary", "color": "#d7233e" },
        { "slug": "color-accent", "name": "Accent", "color": "#f8c9d7" },
        { "slug": "color-accent-2", "name": "Accent 2", "color": "#ebebeb" },
        { "slug": "color-footer", "name": "Footer", "color": "#cbeef3" },
        { "slug": "color-contrast", "name": "Contrast", "color": "#49b3c1" },
        { "slug": "color-background", "name": "Background", "color": "#f8f4f5" },
        { "slug": "color-placeholder", "name": "Placeholder", "color": "#6E6E6E" }
      ]
    },
    "typography": {
      "fontFamilies": [
        { "slug": "body", "name": "Body", "fontFamily": "\"Nunito\", sans-serif" },
        { "slug": "heading", "name": "Heading", "fontFamily": "\"Zilla Slab\", serif" }
      ],
      "fontSizes": [
        { "slug": "small", "size": "0.875rem", "name": "Small" },
        { "slug": "normal", "size": "1rem", "name": "Normal" },
        { "slug": "large", "size": "1.5rem", "name": "Large" },
        { "slug": "x-large", "size": "2rem", "name": "Extra Large" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--color-background)",
      "text": "var(--color-text)"
    },
    "typography": {
      "fontFamily": "var:preset|font-family|body",
      "fontSize": "var:preset|font-size|normal"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|heading"
        }
      }
    }
  }
}
